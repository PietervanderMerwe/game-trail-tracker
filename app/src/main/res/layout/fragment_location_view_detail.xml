<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.view.LocationViewDetailFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextNameViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editTextName"/>

    <EditText
        android:id="@+id/editTextStartDateViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editTextDate"
        android:focusable="false"
        android:clickable="true"
        android:cursorVisible="false" />

    <EditText
        android:id="@+id/editTextEndDateViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editTextDate"
        android:focusable="false"
        android:clickable="true"
        android:cursorVisible="false" />

    <CheckBox
        android:id="@+id/checkBoxIsContinuesViewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBoxIsContinues" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagesLocationRecyclerViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_edit_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_marginEnd="8dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_delete_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_save_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>