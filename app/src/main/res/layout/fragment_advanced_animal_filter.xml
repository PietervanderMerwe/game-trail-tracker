<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.view.filter.AdvancedAnimalFilterFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextStartDateAnimalFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:hint="@string/edit_text_start_date_animal_filter" />

    <EditText
        android:id="@+id/editTextEndDateAnimalFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:hint="@string/edit_text_end_date_animal_filter" />

    <Button
        android:id="@+id/apply_animal_filters_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply_filters" />

</LinearLayout>